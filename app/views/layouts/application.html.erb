<!DOCTYPE html>
<html>
<head>
  <title>IdeaBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="blue lighten-2">
    <div class="container">
      <%= link_to 'Idea Box', root_path, class: 'brand-logo' %>
      <ul class="right">
        <% if current_admin? %>
          <li><%= link_to 'Add Image', new_admin_image_path %></li>
          <li><%= link_to 'Add Category', new_admin_category_path %></li>
        <% end %>

        <% if current_user %>
          <li> <%= link_to 'My Ideas', ideas_path %>
          <li><%= link_to 'Logout', logout_path, method: :delete%></li>
        <% else %>
          <li><%= link_to 'Login', login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

<div class="container">

  <%= yield %>

</div>

</body>
</html>
