<div class="row">
  <div class="col m6 offset-m3 s12 card z-depth-3 pushdown">
    <div class="login">
      <h1 class="green-text center">Edit Image</h1>
      <p class="strong center red-text animated shake"><%= flash[:error] %></p>
      <%= flash[:notice] %>
      <%= form_for @image, url: admin_image_path do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'black-text' %>
        <%= f.label :link %>
        <%= f.text_field :link, class: 'black-text' %>
        <%= f.submit 'Submit', class: 'btn green darken-2' %>
      <% end %>
    </div>
  </div>
</div>
